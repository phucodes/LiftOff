@model LiftOff.Models.JobViewModels.AddJobViewModel

<div asp-validation-summary="All">

    <form asp-controller="Job" asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" asp-placeholder-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location"></label>
            <input class="form-control" asp-for="Location" asp-placeholder-for="Location" />
            <span asp-validation-for="Location"></span>
        </div>

        <div class="form-group">
            <label asp-for="PositionType"></label>
            <input class="form-control" asp-for="PositionType" asp-placeholder-for="PositionType" />
            <span asp-validation-for="PositionType"></span>
        </div>

        <div class="form-group">
            <label asp-for="PositionLevel"></label>
            <input class="form-control" asp-for="PositionLevel" asp-placeholder-for="PositionLevel" />
            <span asp-validation-for="PositionLevel"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description" asp-placeholder-for="Description" />
            <span asp-validation-for="Description"></span>
        </div>

        <div class="form-row col-md-12" id="require-tab">

            <div class="form-group col-md-6">
                <a href="#" id="add">Add Requirements</a>
                @for (int i = 0; i < Model.Requirements.Count; i++)
                {
                    <label asp-for="Requirements"></label>
                    @Html.EditorFor(item => Model.Requirements[i].RequirementName, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                }
            </div>
        </div>

            <div class="form-group">
                @for (int i = 0; i < Model.Benefits.Count; i++)
                {
                    <label asp-for="Benefits"></label>
                    @Html.EditorFor(item => Model.Benefits[i].BenefitName, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                }
            </div>

            <div class="form-group">
                @for (int i = 0; i < Model.Tags.Count; i++)
                {
                    <label asp-for="Tags"></label>
                    @Html.EditorFor(item => Model.Tags[i].TagName, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                }
            </div>

            <input type="submit" value="Add Job" />
    </form>

</div>
