@model LiftOff.Models.JobViewModels.AddJobViewModel

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Date Posted</th>
            <th scope="col">Location</th>
            <th scope="col">Position Level</th>
            <th scope="col">Position Type</th>
            <th scope="col">Employer</th>
            @if (User.IsInRole("Employer"))
            {
                <th scope="col">Availability</th>
            }
            <th scope="col">Requirements</th>
            <th scope="col">Benefits</th>
            <th scope="col">Tag</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.DatePosted</td>
            <td>@Model.Location</td>
            <td>@Model.PositionLevel</td>
            <td>@Model.PositionType</td>

            @if (User.IsInRole("Employer"))
            {
                <td>@Model.IsOpened</td>
            }
        </tr>
    </tbody>

</table>

<ul>
    @for (int i = 0; i < Model.RequirementNames.Count; i++)
    {
        <li>@Model.RequirementNames[i].RequirementName</li>
    }
</ul>

<ul>
    @for (int i = 0; i < Model.BenefitNames.Count; i++)
    {
        <li>@Model.BenefitNames[i].BenefitName</li>
    }
</ul>

<ul>
    @for (int i = 0; i < Model.TagNames.Count; i++)
    {
        <li>@Model.TagNames[i].TagName</li>
    }
</ul>

<a asp-controller="Job" asp-action="Index">Return to index listing</a>