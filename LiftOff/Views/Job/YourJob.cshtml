@model List<LiftOff.Models.Job>

<h1>@Model.Count Result(s)</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Date Posted</th>
            <th scope="col">Location</th>
            <th scope="col">Position Level</th>
            <th scope="col">Position Type</th>
            <th scope="col">Employer</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
        <tr>
            <td>@job.Name</td>
            <td>@job.DatePosted</td>
            <td>@job.Location</td>
            <td>@job.PositionLevel</td>
            <td>@job.PositionType</td>
            <td>@job.Employer</td>
            <td>@job.IsOpened</td>
            <td><a asp-controller="Job" asp-action="ViewJob" asp-route-id=@job.JobId>Details</a></td>
            <td><a asp-controller="Job" asp-action="DeleteJob" asp-route-id=@job.JobId>Remove</a></td>
        </tr>
        }
    </tbody>
</table>